<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/spacing_medium"
      android:paddingRight="@dimen/spacing_medium"
      tools:context="com.rongyingwang.app.ui.main.LoginFragment"
      >

    <LinearLayout
        android:id="@+id/step_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:layout_weight="1"
          android:text="1 输入信息 >"
          android:textColor="@color/colorPrimary"
          android:textSize="@dimen/text_body"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:layout_weight="1"
          android:gravity="center"
          android:text="2 身份验证 >"
          android:textColor="@color/colorPrimary"
          android:textSize="@dimen/text_body"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:layout_weight="1"
          android:gravity="center"
          android:text="3 注册成功 "
          android:textColor="@color/colorPrimary"
          android:textSize="@dimen/text_body"
          />
    </LinearLayout>

    <EditText
        android:id="@+id/member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_container"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/gray_stroke_corner"
        android:hint="输入手机"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_large"
        android:textSize="@dimen/text_body"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/member"
        android:layout_marginTop="@dimen/spacing_medium"
        android:background="@drawable/gray_stroke_corner"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_large"
        android:textSize="@dimen/text_body"
        />

    <LinearLayout
        android:id="@+id/mobile_code_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="@dimen/spacing_medium"
        android:background="@drawable/gray_stroke_corner"
        android:orientation="horizontal"
        >

      <EditText
          android:id="@+id/mobile_code"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:background="@color/white"
          android:hint="输入手机动态验证码"
          android:paddingBottom="@dimen/spacing_medium"
          android:paddingLeft="@dimen/spacing_small"
          android:paddingTop="@dimen/spacing_medium"
          android:textSize="@dimen/text_body"
          />


      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:background="@color/colorPrimary"
          android:text="获取验证码"
          android:textColor="@color/white"
          />

    </LinearLayout>
    <EditText
        android:id="@+id/referer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile_code_container"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/gray_stroke_corner"
        android:hint="输入手机"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_large"
        android:textSize="@dimen/text_body"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/referer"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/colorPrimary"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="@dimen/spacing_medium"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:text="注:"
          android:textColor="#ff0000"
          android:textSize="@dimen/text_body"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:text="1.注册即送20元现金红包。"
          android:textColor="#ff0000"
          android:textSize="@dimen/text_body"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:text="2.可用于投标使用。"
          android:textColor="#ff0000"
          android:textSize="@dimen/text_body"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/login"
          android:layout_marginTop="@dimen/spacing_medium"
          android:text="3.使用后可提现，可再次投标。"
          android:textColor="#ff0000"
          android:textSize="@dimen/text_body"
          />
    </LinearLayout>

  </RelativeLayout>

</ScrollView>
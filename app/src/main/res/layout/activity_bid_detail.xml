<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.rongyingwang.app.ui.bid.BidDetailActivity"
    >

  <include
      layout="@layout/toolbar"
      android:id="@+id/include_layout"
      />


  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/include_layout"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/white"
          android:orientation="vertical"
          android:paddingLeft="@dimen/spacing_medium"
          android:paddingRight="@dimen/spacing_medium"
          android:paddingTop="@dimen/spacing_large"
          >
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_title"
            tools:text="asb"
            />

        <TextView
            android:id="@+id/contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@color/gray"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_small"
            android:textSize="@dimen/text_body"
            tools:text="asb"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="借款金额"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/borrow_amount_format"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_body"
              tools:text="最低投标额"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="还需"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/need_money"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_body"
              tools:text="最低投标额"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/min_loan_money_format"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_body"
              tools:text="最低投标额"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="年利率"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/rate_foramt_w"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="期限"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/repay_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="还款方式"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/loantype"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="风险等级"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/rish_rank"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_body"
              tools:text="最低投标额"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="剩余时间"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:id="@+id/remain_time_format"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_body"
              tools:text="剩余时间"
              />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/spacing_large"
          android:background="@color/white"
          android:orientation="vertical"
          android:paddingLeft="@dimen/spacing_medium"
          android:paddingRight="@dimen/spacing_medium"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="可用余额"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:background="#ff4400"
              android:gravity="center"
              android:paddingBottom="@dimen/spacing_xsmall"
              android:paddingTop="@dimen/spacing_xsmall"
              android:text="我要充值"
              android:textColor="@color/white"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="投标金额"
              android:textSize="@dimen/text_body"
              />
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/white"
              android:hint="输入金额"
              android:textSize="@dimen/text_body"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:paddingBottom="@dimen/spacing_xsmall"
              android:paddingTop="@dimen/spacing_xsmall"
              android:text="收益;0.00"
              android:textColor="@color/colorPrimary"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="现金红包"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="6"
              android:text="加息劵"
              android:textSize="@dimen/text_body"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="最低投标额"
              android:textSize="@dimen/text_body"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:layout_marginTop="@dimen/spacing_medium"
          android:orientation="horizontal"
          >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="查看详情"
            android:textColor="@color/white"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xlarge"
            android:layout_weight="1"
            android:background="#ff4400"
            android:text="马上投标"
            android:textColor="@color/white"
            />
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/spacing_xlarge"
          android:layout_marginTop="@dimen/spacing_large"
          android:text="投资有风险，理财需谨慎。"
          android:textColor="#ff4400"
          android:textSize="@dimen/text_body"
          />
    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
